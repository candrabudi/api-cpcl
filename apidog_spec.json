{
    "openapi": "3.0.1",
    "info": {
        "title": "CPCL API Documentation",
        "description": "Dokumentasi API untuk Sistem Bantuan Pemerintah (CPCL, Plenary, Procurement, Shipment)",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api",
            "description": "Local server"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User Login",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "login": {
                                        "type": "string",
                                        "example": "admin"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "required": [
                                    "login",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/auth/verify-otp": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Verify Login OTP",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "admin@example.com"
                                    },
                                    "otp": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "required": [
                                    "email",
                                    "otp"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/cpcl-documents": {
            "get": {
                "tags": [
                    "CPCL Management"
                ],
                "summary": "List CPCL Documents",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "description": "Set to 'archived' for deleted data",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            },
            "post": {
                "tags": [
                    "CPCL Management"
                ],
                "summary": "Create CPCL Document",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "document_number": {
                                        "type": "string",
                                        "example": "DOC-2026-001"
                                    },
                                    "document_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2026-01-08"
                                    },
                                    "notes": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/plenary-meetings": {
            "get": {
                "tags": [
                    "Plenary Meetings"
                ],
                "summary": "List Plenary Meetings",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            },
            "post": {
                "tags": [
                    "Plenary Meetings"
                ],
                "summary": "Create Plenary Meeting",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "meeting_title": {
                                        "type": "string"
                                    },
                                    "meeting_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "cooperative_id": {
                                                    "type": "integer"
                                                },
                                                "item_id": {
                                                    "type": "integer"
                                                },
                                                "package_quantity": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/procurements": {
            "get": {
                "tags": [
                    "Procurements"
                ],
                "summary": "List Procurements",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            },
            "post": {
                "tags": [
                    "Procurements"
                ],
                "summary": "Create Procurement",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "vendor_id": {
                                        "type": "integer"
                                    },
                                    "procurement_number": {
                                        "type": "string"
                                    },
                                    "procurement_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "plenary_meeting_item_id": {
                                                    "type": "integer"
                                                },
                                                "unit_price": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/shipments": {
            "get": {
                "tags": [
                    "Shipments"
                ],
                "summary": "List Shipments",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            },
            "post": {
                "tags": [
                    "Shipments"
                ],
                "summary": "Create Shipment",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "vendor_id": {
                                        "type": "integer"
                                    },
                                    "tracking_number": {
                                        "type": "string"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "procurement_item_id": {
                                                    "type": "integer"
                                                },
                                                "quantity": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/shipments/{id}/status": {
            "put": {
                "tags": [
                    "Shipments"
                ],
                "summary": "Update Shipment Status",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "pending",
                                            "prepared",
                                            "shipped",
                                            "delivered",
                                            "received"
                                        ]
                                    },
                                    "notes": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/vendor/procurements": {
            "get": {
                "tags": [
                    "Vendor Dashboard"
                ],
                "summary": "Vendor: List My Procurement Items",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/vendor/procurements/{id}/process-status": {
            "put": {
                "tags": [
                    "Vendor Dashboard"
                ],
                "summary": "Vendor: Update Process/Production Status",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "process_status": {
                                        "type": "string",
                                        "enum": [
                                            "pending",
                                            "purchase",
                                            "production",
                                            "completed"
                                        ]
                                    },
                                    "notes": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/items": {
            "get": {
                "tags": [
                    "Master Data"
                ],
                "summary": "List Items",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/item-types": {
            "get": {
                "tags": [
                    "Master Data"
                ],
                "summary": "List Item Types",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/vendors": {
            "get": {
                "tags": [
                    "Master Data"
                ],
                "summary": "List Vendors",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}